<%= form_with(model: @version, url: [@schema, @version]) do |form| %>

  <div class="space-y-8 divide-y divide-gray-200">
    <div class="pt-0">
      <div>
        <h3 class="text-lg leading-6 font-medium text-gray-900">
          New schema version
        </h3>
        <p class="mt-1 text-sm text-gray-500">
        
        </p>
      </div>
      <% if @version.errors.any? %>
        <div id="error_explanation" class="mt-4">

          <% if @schema&.format&.json? %>
            <p class="mt-1 text-sm text-red-900">
              Schemabook currently validates against <%= JsonValidator::DRAFT %> of JSON Schema.
            </p>
          <% end %>

          <p class="mt-1 text-sm text-red-900">
            <%= pluralize(@version.errors.count, "error") %> prohibited this version from being saved:
          </p>

          <ul>
            <% @vesion.errors.each do |error| %>
              <li class="py-1 px-2 mt-1 text-sm text-red-900">
                <%= error.full_message %>
              </li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <div class="mt-6 grid grid-cols-1 gap-y-6 gap-x-4 sm:grid-cols-6">
        <div class="sm:col-span-3">
          <label for="service" class="block text-sm font-medium text-gray-700">
            Body*
          </label>
          <div class="mt-1">
            <%= form.text_area :body, cols: 20, rows: 40, class: "shadow-sm focus:ring-indigo-500 focus:border-indigo-500 block w-full sm:text-sm border-gray-300 rounded-md" %>
          </div>
        </div>
      </div>

    </div>
  </div>

  <div class="pt-5 grid grid-cols-1 gap-y-6 gap-x-4 sm:grid-cols-6">
    <div class="sm:col-span-3 justify-right">
      <a href="<%= schema_path(@schema) %>" class="button bg-white py-2 px-4 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">
        Cancel
      </a>
      <button type="submit" class="ml-3 inline-flex justify-center py-2 px-4 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-teal-600 hover:bg-cyan-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-cyan-500">
        Save
      </button>
    </div>
  </div>
<% end %>
