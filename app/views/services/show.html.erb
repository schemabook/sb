<!-- 3 column wrapper -->
<div class="flex-grow w-full mx-auto xl:px-8 lg:flex">
  <!-- Left sidebar & main wrapper -->
  <div class="flex-1 min-w-0 bg-white xl:flex">
    <div class="border-b border-gray-200 xl:border-b-0 xl:flex-shrink-0 xl:w-64 xl:border-r xl:border-gray-200 bg-white">
      <div class="h-full pl-4 pr-6 py-6 sm:pl-6 lg:pl-8 xl:pl-0">

      <%= render 'shared/left_sidebar' %>

      </div>
    </div>

    <div class="bg-white lg:min-w-0 lg:flex-1">
      <div class="h-full py-6 px-4 sm:px-6 lg:px-8">
        <!-- Start main area-->
        <div class="relative h-full" style="min-height: 36rem;">

          <%= render 'shared/flashes' %>

          <!-- header -->
          <div class="pb-5 px-2 sm:flex sm:items-center sm:justify-between">
            <h2 class="text-lg leading-6 font-medium text-gray-600">
              <%= @service.name %>
            </h2>
            <div class="mt-3 sm:mt-0 sm:ml-4 font-medium text-gray-400">
              <a href="<%= edit_service_path(@service) %>">
                <button type="button" class="relative inline-flex items-center px-4 py-2 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-cyan-600 hover:bg-teal-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-teal-500">
                  Edit Service
                </button>
              </a>
            </div>
          </div>

          <!-- main area section -->
          <div class="relative my-6 inset-0 border-2 border-gray-200 border-solid rounded-lg">
            <div class="p-6 bg-white shadow overflow-hidden sm:rounded-md">
              <div class="bg-white px-4 py-5 border-b border-gray-200 sm:px-6">
                <div class="-ml-4 -mt-2 flex items-center justify-between flex-wrap sm:flex-nowrap">
                  <div class="mt-2">
                    <p class="text-md font-medium text-gray-400">
                      Description: <%= @service.description %>
                    </p>
                  </div>
                </div>
              </div>

              <div class="p-4">
                <ul>
                  <li>Team: <%= @service.team.name %></li>
                  <li>Created at: <%= @service.created_at.to_s %></li>
                  <li>Created by: <%= @service.creator.email %></li>
                </ul>
              </div>
            </div>
          </div>
          <!-- end main area section -->

          <!-- main area section -->
          <div class="relative my-6 inset-0 border-2 border-gray-200 border-solid rounded-lg">
            <div class="p-6 bg-white shadow overflow-hidden sm:rounded-md">
              <div class="bg-white px-4 py-5 border-b border-gray-200 sm:px-6">
                <div class="-ml-4 -mt-2 flex items-center justify-between flex-wrap sm:flex-nowrap">
                  <div class="mt-2">
                    <p class="text-md font-medium text-gray-900">
                      Schemas: 
                    </p>

                    <p class="text-sm font-small text-gray-400">
                      Schemas associated with the service
                    </p>
                  </div>
                </div>
              </div>

              <div class="p-4">
                <ul>
                  <% @service.schemas.each do |schema| %>
                    <li><%= link_to schema.name, schema_path(schema) %></li>
                  <% end %>
                </ul>
              </div>
            </div>
          </div>
          <!-- end main area section -->

        </div>
        <!-- End main area -->
      </div>
    </div>
  </div>

  <div class="bg-gray-50 pr-4 sm:pr-6 lg:pr-8 lg:flex-shrink-0 lg:border-l lg:border-gray-200 xl:pr-0">
    <div class="h-full pl-6 py-6 lg:w-80">
      <%= render partial: 'shared/activity_feed' %>
    </div>
  </div>
</div>
