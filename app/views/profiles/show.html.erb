<!-- Left sidebar & main wrapper -->
<div class="flex-1 min-w-0 bg-white xl:flex xl:px-8">
  <div class="border-b border-gray-200 xl:border-b-0 xl:flex-shrink-0 xl:w-64 xl:border-r xl:border-gray-200 bg-white">
    <div class="h-full pl-4 pr-6 py-6 sm:pl-6 lg:pl-8 xl:pl-0">

      <%= render 'shared/left_sidebar' %>

    </div>
  </div>

  <div class="bg-white lg:min-w-0 lg:flex-1">
    <div class="h-full py-6 px-4 sm:px-6 lg:px-8">
      <!-- Start main area-->
      <div class="relative h-full" style="min-height: 36rem;">

        <%= render 'shared/flashes' %>

        <!-- header -->
        <div class="pb-5 px-2 py-2 sm:flex sm:items-center sm:justify-between">
          <h2 class="text-2xl font-bold leading-10 tracking-tight text-gray-900"><%= @user.display_name %></h2>
          <div class="mt-3 sm:mt-0 sm:ml-4 font-medium text-gray-600">
            Schemabook appreciates <%= @user.business.name %>!
          </div>
        </div>


        <!-- main area wrapper -->
        <div class="my-8 relative inset-0 border-2 border-gray-200 border-solid rounded-lg">
          <!-- main area list -->
          <div class="bg-white shadow overflow-hidden sm:rounded-md">

            <div class="bg-white px-4 py-5 border-b border-gray-200 sm:px-6">
              <div class="-ml-4 -mt-2 flex items-center justify-between flex-wrap sm:flex-nowrap">
                <div class="ml-4 mt-2">
                  <h3 class="text-lg leading-6 font-medium text-gray-900">
                    Information
                  </h3>
                </div>
                <div class="ml-4 mt-2 flex-shrink-0">
                  <% if current_user.admin? || current_user == @user %>
                    <a href="<%= edit_user_profile_path(@user) %>">
                      <button type="button" class="relative inline-flex items-center px-4 py-2 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-cyan-600 hover:bg-teal-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-teal-500">
                        Edit Info
                      </button>
                    </a>
                  <% end %>
                </div>
              </div>
            </div>

            <div class="p-4">
              <ul id="info">
                <li><%= @user.first_name %> <%= @user.last_name %></li>
                <li><%= @user.email %></li>
                <li>&nbsp;</li>
                <li><div class="center"><div class="inline-block">API Token: </div><div class="pl-4 inline-block blur-sm hover:blur-none"><%= @user.api_token %></div></div></li>
              </ul>
            </div>
          </div>
          <!-- end main area list -->
        </div>
        <!-- end main area wrapper -->
        
        <!-- main area wrapper -->
        <div class="my-8 relative inset-0 border-2 border-gray-200 border-solid rounded-lg">
          <!-- main area list -->
          <div class="bg-white shadow overflow-hidden sm:rounded-md">

            <div class="bg-white px-4 py-5 border-b border-gray-200 sm:px-6">
              <div class="-ml-4 -mt-2 flex items-center justify-between flex-wrap sm:flex-nowrap">
                <div class="ml-4 mt-2">
                  <h3 class="text-lg leading-6 font-medium text-gray-900">
                    Team
                  </h3>
                </div>
                <div class="ml-4 mt-2 flex-shrink-0">
                  <% if current_user.admin? %>
                  <a href="<%= edit_user_profile_path(@user) %>">
                    <button type="button" class="relative inline-flex items-center px-4 py-2 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-cyan-600 hover:bg-teal-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-teal-500">
                      Edit Team
                    </button>
                  </a>
                  <% end %>
                </div>
              </div>
            </div>

            <div class="p-4">
              <ul id="team">
                <li><%= link_to @user.team.name, team_path(@user.team) %></li>
              </ul>
            </div>
          </div>
          <!-- end main area list -->

        </div>
        <!-- end main area wrapper -->


        <% if @stakeholdings.present? %>
          <!-- main area wrapper -->
          <div class="my-8 relative inset-0 border-2 border-gray-200 border-solid rounded-lg">
            <!-- main area list -->
            <div class="bg-white shadow overflow-hidden sm:rounded-md">

              <div class="bg-white px-4 py-5 border-b border-gray-200 sm:px-6">
                <div class="-ml-4 -mt-2 flex items-center justify-between flex-wrap sm:flex-nowrap">
                  <div class="ml-4 mt-2">
                    <h3 class="text-lg leading-6 font-medium text-gray-900">
                      Stakeholdings
                    </h3>
                  </div>
                </div>
              </div>

              <div class="p-4">
                <ul id="team">
                  <% @stakeholdings.each do |stakeholding| %>
                    <li><%= link_to stakeholding.schema.name, schema_path(stakeholding.schema) %></li>
                  <% end %>
                </ul>
              </div>
            </div>
            <!-- end main area list -->

          </div>
          <!-- end main area wrapper -->
        <% end %>

    </div>
  </div>
</div>

<div class="bg-gray-50 pr-4 sm:pr-6 lg:pr-8 lg:flex-shrink-0 lg:border-l lg:border-gray-200 xl:pr-8">
  <div class="pl-6 py-6 lg:w-80">
    <%= render partial: 'shared/activity_feed' %>
  </div>
</div>
