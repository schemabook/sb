<div id="add-webhook" class="w-full grid">
  <div class="py-2">
    <span class="text-gray-400">Webhooks:</span> <%= @schema.webhooks.count %>
  </div>
  <% if @schema.team.users.include?(current_user) %>
  <div class="absolute right-0">
    <a href="<%= new_schema_webhook_path(@schema) %>">
      <button id="new-webhook" type="submit" class="-ml-px relative inline-flex items-center px-4 py-2 border border-gray-300 text-sm font-medium rounded-md text-gray-700 hover:bg-gray-100 focus:outline-none focus:ring-1 focus:ring-indigo-500 focus:border-indigo-500">
        <svg class="h-5 w-5 text-gray-400" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
          <path stroke-linecap="round" stroke-linejoin="round" d="M19.5 14.25v-2.625a3.375 3.375 0 00-3.375-3.375h-1.5A1.125 1.125 0 0113.5 7.125v-1.5a3.375 3.375 0 00-3.375-3.375H8.25m3.75 9v6m3-3H9m1.5-12H5.625c-.621 0-1.125.504-1.125 1.125v17.25c0 .621.504 1.125 1.125 1.125h12.75c.621 0 1.125-.504 1.125-1.125V11.25a9 9 0 00-9-9z" />
        </svg>
      </button>
    </a>
  </div>
  <% end %>
  <% if @schema.webhooks.count > 1 %>
  <div class="py-2">
    <span class="text-gray-400 text-sm italic">
    View General Information for previous webhooks</span>
  </div>
  <% end %>
</div>
