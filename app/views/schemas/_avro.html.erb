<div id="gutter" class="absolute -ml-4 border-r-1">
  <% JSON.pretty_generate(JSON.parse(SchemaFormatter.new(schema: @schema).as_avro)).lines.count.times do |count| %>
    <div class="bg-gray-100 text-right text-gray-400"><%= count + 1 %></div>
  <% end %>
</div>

<pre class="font-mono ml-4">
<%= JSON.pretty_generate(JSON.parse(SchemaFormatter.new(schema: @schema).as_avro)) %>
</pre>
