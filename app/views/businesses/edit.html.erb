<!-- Left sidebar & main wrapper -->
<div class="flex-1 min-w-0 bg-white xl:flex xl:px-8">
  <div class="border-b border-gray-200 xl:border-b-0 xl:flex-shrink-0 xl:w-64 xl:border-r xl:border-gray-200 bg-white">
    <div class="h-full pl-4 pr-6 py-6 sm:pl-6 lg:pl-8 xl:pl-0">

    <%= render 'shared/left_sidebar' %>

    </div>
  </div>

  <div class="bg-white lg:min-w-0 lg:flex-1">
    <div class="h-full py-6 px-4 sm:px-6 lg:px-8">
      <!-- Start main area-->
      <div class="relative h-full" style="min-height: 36rem;">

        <%= render 'shared/flashes' %>

        <!-- header -->
        <div class="pb-5 px-2 py-2 sm:flex sm:items-center sm:justify-between">
          <h2 class="text-2xl font-bold leading-10 tracking-tight text-gray-900"><%= @business.name %></h2>
          <div class="mt-3 sm:mt-0 sm:ml-4 font-medium text-gray-400">
            Schemabook appreciates <%= @business.name %>!
          </div>
        </div>

        <!-- business info area wrapper -->
        <div class="relative inset-0 border-2 border-gray-200 border-solid rounded-lg">
          <!-- main area form -->
          <div class="p-6 bg-white shadow overflow-hidden sm:rounded-md">
            <%= render 'form' %>
          </div>
        </div>
        <!-- end business info area -->

        <% if Rails.env.development? %>
        <!-- payment area -->
        <div class="mt-8 relative inset-0 border-2 border-gray-200 border-solid rounded-lg">
          <div class="p-6 bg-white shadow overflow-hidden sm:rounded-md">
            <div class="space-y-8 divide-y divide-gray-200">
              <div class="pt-0">
                <div>
                  <h3 class="text-lg leading-6 font-medium text-gray-900">
                  Payment Information
                  </h3>
                  <p class="mt-1 text-sm text-gray-500">
                    We use Stripe for all subscription billing.
                  </p>
                </div>
                <div class="pt-0 product">
                  <div>
                    <h5>$200.00 / month</h5>
                  </div>
                </div>

                <% if @business.subscribed? %>
                <div class="pt-4 product">
                  <div>
                    <h5>Subscribed on: <%= @business.subscribed_at %></h5>
                  </div>
                </div>
                <% else %>
                <div class="pt-0">
                  <div class="pt-5">
                    <div class="flex justify-end">

                    <form action="/checkouts" method="GET">
                      <!-- Add a hidden field with the lookup_key of your Price -->
                      <button id="checkout-and-portal-button" type="submit" class="ml-3 inline-flex justify-center py-2 px-4 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-teal-600 hover:bg-cyan-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-cyan-500">
                      Subscribe
                      </button>
                    </form>
                    </div>
                  </div>
                </div>
              <% end %>

              </div>
            </div>
          </div>
          <% end %>
        </div>
      </div>
      <!-- end payment area -->

  </div>
</div>

<div class="bg-gray-50 pr-4 sm:pr-6 lg:pr-8 lg:flex-shrink-0 lg:border-l lg:border-gray-200 xl:pr-8">
  <div class="pl-6 py-6 lg:w-80">
    <%= render partial: 'shared/activity_feed' %>
  </div>
</div>
