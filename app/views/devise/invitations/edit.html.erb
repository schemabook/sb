<!-- 3 column wrapper -->
<div class="flex-grow w-full mx-auto xl:px-8 lg:flex">
  <!-- Left sidebar & main wrapper -->
  <div class="flex-1 min-w-0 bg-white xl:flex">
    <!--
    <div class="border-b border-gray-200 xl:border-b-0 xl:flex-shrink-0 xl:w-64 xl:border-r xl:border-gray-200 bg-white">
      <div class="h-full pl-4 pr-6 py-6 sm:pl-6 lg:pl-8 xl:pl-0">

        <%# render 'shared/left_sidebar' %>

      </div>
    </div>-->

    <div class="bg-white lg:min-w-0 lg:flex-1">
      <div class="h-full py-6 px-4 sm:px-6 lg:px-8">
        <!-- Start main area-->
        <div class="relative h-full" style="min-height: 36rem;">

          <%= render 'shared/flashes' %>

          <!-- header -->
          <div class="pb-5 px-2 sm:flex sm:items-center sm:justify-between">
            <h2 class="text-lg leading-6 font-medium text-gray-600">
              Welcome stakeholder!
            </h2>
            <div class="mt-3 sm:mt-0 sm:ml-4 font-medium text-gray-400">
              Schemabook appreciates you joining.
            </div>
          </div>


          <!-- main area wrapper -->
          <div class="relative inset-0 border-2 border-gray-200 border-solid rounded-lg">

            <!-- main area form -->
            <div class="p-6 bg-white shadow overflow-hidden sm:rounded-md">

              <%= form_for(resource, as: resource_name, url: invitation_path(resource_name), html: { method: :put }) do |f| %>
                <%= render "devise/shared/error_messages", resource: resource %>

                <div class="space-y-8 divide-y divide-gray-200">
                  <div class="pt-0">
                    <div class="mt-6 grid grid-cols-1 gap-y-6 gap-x-4 sm:grid-cols-6">
                      <div class="sm:col-span-3">
                        <label for="email" class="block text-sm font-medium text-gray-700">
                          Stakeholder Password:
                        </label>
                        <div class="mt-1">
                          <%= f.password_field :password, class: "shadow-sm focus:ring-indigo-500 focus:border-indigo-500 block w-full sm:text-sm border-gray-300 rounded-md" %>
                        </div>
                        <div class="mt-1">
                          <%= f.password_field :password_confirmation, class: "shadow-sm focus:ring-indigo-500 focus:border-indigo-500 block w-full sm:text-sm border-gray-300 rounded-md" %>
                        </div>

                        <div class="hidden">
                          <%= f.hidden_field :invitation_token, readonly: true %>
                        </div>
                      </div>
                    </div>
                  </div>
                </div>

                <div class="pt-5">
                  <div class="flex justify-end">
                    <a href="<%= root_path %>" class="button bg-white py-2 px-4 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">
                      Cancel
                    </a>
                    <button type="submit" class="ml-3 inline-flex justify-center py-2 px-4 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-teal-600 hover:bg-cyan-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-cyan-500">
                      Submit
                    </button>
                  </div>
                </div>
              <% end %>

            </div>
            <!-- end main area list -->

          </div>
        </div>
        <!-- End main area -->
      </div>
    </div>
  </div>

  <div class="bg-gray-50 pr-4 sm:pr-6 lg:pr-8 lg:flex-shrink-0 lg:border-l lg:border-gray-200 xl:pr-0">
    <div class="h-full pl-6 py-6 lg:w-80">
      <%= render partial: 'shared/activity_feed' %>
    </div>
  </div>
</div>
